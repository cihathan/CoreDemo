@using Entity.Concrete
@model List<Message2>
@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Gelen Kutusu</h1>
<table class="table table-bordered">
<tr>
    <th>#</th>
    <th>Konu</th>
    <th>Gönderen</th>
    <th>Tarih</th>
    <th>Mesajı Aç</th>
</tr>
@foreach(var item in Model){
    <tr>
        <th>@item.MessageId</th>
        <td>@item.Subject</td>
        <td>@item.SenderWriter.WriterName</td>
        <td>@item.MessageDate.ToString("dd-MM-yyyy")</td>
        <td><a href="/Message/MessageDetails/@item.MessageId" class="btn btn-info" >Mesajı Aç</a></td>
        
    </tr>
}
</table>
<a href="/Message/SendMessage" class="btn btn-primary">Yeni Mesaj Oluştur</a>
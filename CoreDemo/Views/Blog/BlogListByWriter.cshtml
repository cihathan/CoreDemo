@using Entity.Concrete
@model List<Blog>
@{
	ViewData["Title"] = "BlogListByWriter";
	Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yazarın Blogları</h1>
<table class="table table-bordered">
	<tr>
		<th>#</th>
		<th>Blog Başlığı</th>
		<th>Oluşturma Tarihi</th>
		<th>Kategori</th>
		<th>Durum</th>
		<th>Sil</th>
		<th>Düzenle</th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<th>@item.BlogId</th>
			<td>@item.BlogTitle</td>
			<td>@(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))</td>
			<td><span class="badge badge-primary">@item.Category.CategoryName</span></td>
			<td>
				@if (item.BlogStatus)
				{
					<span class="badge badge-success">Aktif</span>
				}
				else
				{
					<span class="badge badge-secondary">Pasif</span>
				}
			</td>
			<td><a href="/Blog/DeleteBlog/@item.BlogId" class="btn btn-danger">Sil</a></td>
			<td><a href="/Blog/EditBlog/@item.BlogId" class="btn btn-warning">Güncelle</a></td>
		</tr>
	}
</table>
<br />
<a href="/Blog/AddBlog" class="btn btn-info">Yeni Blog Oluştur</a>